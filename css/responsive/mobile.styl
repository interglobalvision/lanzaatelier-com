$header-height = 65px
$footer-height = 65px

// BASIC

.main-content-padding
  padding: $header-height 0 $footer-height

.site-title
  text-align: center
  
.site-logo
  svg
    height: 12px
  
// ******************************************************

// HEADER

#mobile-header
  position: fixed
  z-index: 1000
  width: 100%
  top: 0
  left: 0
  padding: $margin-small 0 $margin-basic
  background-image: linear-gradient(to bottom, $color-white 0, $color-white 80%, $color-white-trans 100%)
  
.mobile-toggle
  position: absolute
  height: 100%
  width: $margin-basic
  top: $margin-small - 2
  right: $margin-small
  height: 18px
  width: 21px
  text-align: center
  color: $color-blue
  cursor: pointer
  
.menu-open 
  svg 
    width: 21px
    height: 16px
    fill: $color-blue
  
.menu-close
  display: none
  svg 
    width: 18px
    height: 18px

#nav-holder
  display: none
  background: $color-green
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0
  text-align: center
  padding-top: $margin-mid
  padding-bottom: $margin-mid
  font-size: $font-size-h1
  
#nav-menu
  display: flex
  flex-direction: column
  justify-content: center
  ul li 
    display: block
    
#lang-holder
  display: flex
  flex-direction: column
  justify-content: space-around
  
#mobile-email
  font-size: $font-size-h2
  
body.menu-active
  #nav-holder
    display: flex
  .site-title
    background: none
    color: $color-white
  .mobile-toggle
    color: $color-white
  .menu-open
    display: none
  .menu-close
    display: initial
  #header, #footer 
    background: initial
    a
      &:hover,
      &.current
        font-style: italic
        color: $color-black
        svg 
          fill: $color-white
    svg 
      fill: $color-white
    
// ******************************************************
    
// FOOTER

#footer 
  padding: $margin-basic 0 $margin-small

.footer-logo-holder
  text-align: center

.footer-email-holder
  display: none
  
// ******************************************************

// SINGLE PROJECT

.project-text-title 
  display: none

.project-photo-holder
  img 
    max-height: 300px
    
.single-project-drawings
  padding-top: $header-height
  
.single-project-photos
  padding-bottom: $footer-height

// ******************************************************

// ARCHIVE PROJECT

.archive-project-photos
  display: none

// ******************************************************

// INDEX

.index-container
  padding-left: $margin-basic
  padding-right: $margin-basic
