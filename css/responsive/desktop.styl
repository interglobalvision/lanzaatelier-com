$header-height = 80px
$footer-height = 80px

// BASIC

.main-content-padding
  padding: $header-height 0 $footer-height
  
// ******************************************************

// HEADER

.nav-item 
  margin-right: $margin-small
  
// ******************************************************

// SINGLE PROJECT
  
.project-content-holder
  height: 100vh
  overflow-y: scroll
  padding-top: $header-height
  padding-bottom: $footer-height
  &.hide
    display: none
      
.project-text-title 
  display: block
  
.swiper-container
  margin-top: $header-height + $margin-basic
  
.project-photos-container
  height: calc("100vh - " ($header-height + $footer-height + ($margin-basic * 2)))
  
.project-photo-holder
  img 
    flex: 0 1 auto
    max-height: 100%
    width: auto
  
// FRONT PAGE

#front-page 
  position: absolute
  width: 100% 
  height: 100%
  top: 0
  left: 0
  overflow: hidden
  .container, .grid-row 
    height: 100%

.front-page-section
  position: absolute
  height: 100%
  width: 50%
  padding-top: $margin-mid
  padding-bottom: $margin-mid
  overflow: hidden

.front-left
  left: 0
  
.front-right
  right: 0

// ******************************************************

// ARCHIVE PROJECT

.archive-project-photos
  display: flex
  
.archive-photos-container
  margin-top: $margin-basic
  
// ******************************************************

// INDEX

.index-container
  padding-left: $margin-small
  padding-right: $margin-small
