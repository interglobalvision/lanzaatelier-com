$header-height = 94px
$footer-height = 94px

// BASIC

.main-content-padding
  padding: $header-height 0 $footer-height
  
// ******************************************************

// HEADER

.nav-item 
  margin-right: $margin-small
  
// ******************************************************
 
// FRONT PAGE

#front-page 
  width: 100% 
  height: 100%
  overflow: hidden
  position: relative
  z-index: 1
  .container, .grid-row 
    height: 100%

.scroll-cols-holder
  overflow: hidden
  height: calc("100vh - " + ($header-height + $footer-height))
  width: 100%
  position: fixed
  top: $header-height
  left: 0
  
.scroll-col 
  position: absolute
  font-size: 0
  margin-right: $margin-tiny
  img 
    margin: $margin-small 0
  a:first-of-type img
    margin-top: 0
  a:last-of-type img
    margin-bottom: 0
  
.scroll-col-right
  bottom: 0 
  
// ******************************************************

// SINGLE PROJECT
  
.project-content-holder
  height: 100vh
  overflow-y: scroll
  padding-top: $header-height
  padding-bottom: $footer-height
  &.hide
    display: none
      
.project-text-title 
  display: block
  
.swiper-container
  margin-top: $header-height + $margin-basic
  
.project-photos-container
  height: calc("100vh - " ($header-height + $footer-height + ($margin-basic * 2)))
  
.project-photo-holder
  img 
    flex: 0 1 auto
    max-height: 100%
    width: auto

// ******************************************************

// ARCHIVE PROJECT

.archive-project-photos
  display: flex
  
.archive-photos-container
  margin-top: $margin-basic
  
// ******************************************************

// INDEX

.index-container
  padding-left: $margin-small
  padding-right: $margin-small
