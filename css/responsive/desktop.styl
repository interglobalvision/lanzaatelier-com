$header-height = 80px
$footer-height = 80px

// HEADER

.nav-item 
  margin-right: $margin-small
  
// ******************************************************

// FRONT PAGE

#front-page 
  width: 100% 
  height: 100%
  overflow: hidden
  position: relative
  z-index: 1

  .container, .grid-row 
    height: 100%

.front-page-section
  height: 100%
  width: 50%

.scroll-cols-holder
  overflow: hidden
  height: calc("100vh - " + ($header-height + $footer-height))
  width: 100%
  position: fixed
  top: $header-height
  left: 0
  
.scroll-col 
  position: absolute
  font-size: 0
  margin-right: $margin-tiny
  img 
    margin: $margin-small 0
  a:first-of-type img
    margin-top: 0
  a:last-of-type img
    margin-bottom: 0
  
.scroll-col-right
  bottom: 0 

