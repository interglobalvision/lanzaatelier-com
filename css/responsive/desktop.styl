$header-height = 80px
$footer-height = 80px
  
// ******************************************************

// HEADER

.nav-item 
  margin-right: $margin-small
  
// ******************************************************

// SINGLE PROJECT
  
.project-content-holder
  height: 100vh
  overflow-y: scroll
  padding-top: $header-height
  padding-bottom: $footer-height
  &.hide
    display: none
      
.project-text-title 
  display: block
  
.swiper-container
  margin-top: $header-height + $margin-basic
  height: calc("100vh - " ($header-height + $footer-height + ($margin-basic * 2)))
  
.swiper-slide
  img 
    flex: 0 1 auto
    max-height: 100%
    width: auto
  