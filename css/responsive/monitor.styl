$header-height = 84px
$footer-height = 81px

// BASIC

.main-content-padding
  padding: $header-height 0 $footer-height

// ******************************************************

// HEADER

#header 
  font-size: $font-size-mid
  
// ******************************************************

// FRONT PAGE

.scroll-col-left
  padding: $header-height ($margin-small * 2) $footer-height 0

.scroll-col-right
  padding: $header-height $margin-small $footer-height
  
.front-image-holder 
  padding: 6vh 0 
  
// ******************************************************

// SINGLE PROJECT
  
.project-content-holder
  padding-top: $header-height
  padding-bottom: $footer-height
  padding-right: $margin-basic
  
.single-project-photos
  padding-left: $margin-basic
  
.swiper-container
  margin-top: $header-height + $margin-basic

.project-photos-container
  height: calc('100vh - ' ($header-height + $footer-height + ($margin-basic * 2)))
  
// ******************************************************

// INDEX

.index-container
  padding-left: $margin-large
  padding-right: $margin-large
  
// ******************************************************