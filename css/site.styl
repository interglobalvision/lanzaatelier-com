@import 'kouto-swiss'
@import 'helpers'

// ******************************************************

// RESETS

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// GRID

@import 'grid'

// ******************************************************

// TYPOGRAPHY

@import 'type'

// ******************************************************

// VARIABLES

$color-black = rgb(0, 0, 0)
$color-white = rgb(255, 255, 255)

// ******************************************************

// BASIC

html, body 
  height: 100%

html
  background-color: $color-white-soft
  color: $color-black-soft

img
  max-width: 100%
  height: auto
  
.site-logo
  svg
    height: 10px

// ******************************************************

// HEADER 

#header 
  position: fixed 
  top: 0
  left: 0 
  width: 100%
  z-index: 1000
  background-color: $color-white
  
// ******************************************************

// FRONT PAGE 

.front-page-section
  text-align: center
  z-index: 1000

// ******************************************************

// FOOTER 

#footer 
  position: fixed 
  bottom: 0
  left: 0 
  width: 100%
  z-index: 1000
  background-color: $color-white
  

// ******************************************************

// MEDIA QUERIES

$gutter = 16px 

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)
    
$font-size-basic = 12px
$font-size-h1 = 28px
$font-size-h2 = 21px
$font-size-h3 = 16px

grid(96%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, $font-size-h1, $font-size-h2, $font-size-h3)

@import 'responsive/mobile'

@media screen and (min-width: 720px)

  $gutter = 24px
  
  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)
  
  $font-size-basic = 14px
  
  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)
  
  grid(680px, $gutter, m)
  
  font-size($font-size-basic)
  
  .mobile-only
    display: none
  
  @import 'responsive/tablet'

@media screen and (min-width: 1024px)

  $gutter = 32px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)
  
  $font-size-basic = 16px

  grid(1000px, $gutter, l)
  
  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)
  
  font-size($font-size-basic)

  @import 'responsive/desktop'
  
@media screen and (min-width: 1280px)
  
  grid(1200px)

@media screen and (min-width: 1366px)

  grid(1300px)

@media screen and (min-width: 1680px)

  grid(1600px)

@media screen and (min-width: 1920px)

  grid(1800px)
