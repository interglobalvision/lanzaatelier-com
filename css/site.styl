  // styl property ordering: https://github.com/rossPatton/stylint/blob/master/src/data/ordering.json

@import 'kouto-swiss'
@import 'helpers'

// ******************************************************

// RESETS

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// JS LIBRARY CSS

@import 'swiper'

// ******************************************************

// GRID

@import 'grid'

// ******************************************************

// VARIABLES

$color-black = rgb(0, 0, 0)
$color-white = rgba(255, 255, 255, 1)
$color-white-trans = rgba(255, 255, 255, 0)
$color-blue = rgb(0, 9, 255)
$color-green = rgb(33, 83, 47)
$color-green-light = rgb(57, 126, 88)

// ******************************************************

// TYPOGRAPHY

@import 'type'

// ******************************************************

// BASIC

html, body
  height: 100%

html
  background-color: $color-white

img
  max-width: 100%
  height: auto

#header,
#footer
  a
    &:hover,
    &.current
      font-style: italic
    &:hover
      color: $color-blue
      svg
        fill: $color-blue
    &.current
      color: $color-green-light
    &.current-lang
      text-decoration: underline
      cursor: default
      &:hover
        font-style: normal
        color: $color-black
        padding-right: 0

.qtranxs-available-languages-message
  display: none

.ps-scrollbar-x-rail,
.ps-scrollbar-y-rail
  position: absolute
  left: -9999px
  width: 0px

// ******************************************************

// HEADER

#header
  position: fixed
  top: 0
  left: 0
  width: 100%
  z-index: 9000
  background-image: linear-gradient(to bottom, $color-white 0, $color-white 75%, $color-white-trans 100%)

// ******************************************************

// FRONT PAGE

.scroll-cols-holder
  // eliminates white-space between imgs
  font-size: 0

// ******************************************************

// FOOTER

#footer
  position: fixed
  bottom: 0
  left: 0
  width: 100%
  z-index: 9000
  background-image: linear-gradient(to top, $color-white 0, $color-white 75%, $color-white-trans 100%)

// ******************************************************

// SINGLE PROJECT

.swiper-wrapper
  align-items: center

.project-photo-holder
  img
    width: auto

.single-project-drawings
  // eliminates white-space between imgs
  font-size: 0

.swiper-pagination-custom
  width: auto

#project-gallery-pagination
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 1000

#project-slide-prev,
#project-slide-next
  position: absolute
  top: 0
  width: 50%
  height: 100%

#project-slide-prev
  left: 0
  cursor: url('../img/dist/ui-cursor-arrow-left.png'), w-resize

#project-slide-next
  right: 0
  cursor: url('../img/dist/ui-cursor-arrow-right.png'), e-resize

.project-pdf
  position: absolute
  width: 100%
  left: 0
  text-align: center

// ******************************************************

// ARCHIVE PROJECT

.archive-project-title
  &:hover
    font-style: italic

.project-photos-container
  &.hide
    display: none

// ******************************************************

// MEDIA QUERIES

$gutter = 16px

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 1.5)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 12px
$font-size-small = 10px
$font-size-mid = 14px
$font-size-large = 19px
$font-size-extra = 24px


grid(96%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, $font-size-small, $font-size-mid, $font-size-large, $font-size-extra)

@import 'responsive/mobile'

@media screen and (orientation: landscape) and (max-height: 375px)
  #nav-holder
    padding-top: 43px
    padding-bottom: 40px
    font-size: 17px
  #mobile-email
    font-size: 16px

@media screen and (min-width: 500px)

  $gutter = 24px

  grid(96%, $gutter, s)

@media screen and (min-width: 720px)

  $gutter = 24px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 1.5)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-basic = 14px
  $font-size-small = 12px
  $font-size-mid = 16px
  $font-size-large = 28px
  $font-size-extra = 36px

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  grid(680px, $gutter, m)

  font-sizes($font-size-basic, $font-size-small, $font-size-mid, $font-size-large, $font-size-extra)

  .mobile-only
    display: none

  @import 'responsive/tablet'

@media screen and (min-width: 1024px)

  $gutter = 32px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 1.5)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-basic = 15px
  $font-size-small = 13px
  $font-size-mid = 17px

  grid(1000px, $gutter, l)

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  font-sizes($font-size-basic, $font-size-small, $font-size-mid)

  @import 'responsive/laptop'

@media screen and (min-width: 1280px)

  grid(1200px)

@media screen and (min-width: 1366px)

  grid(1300px)

@media screen and (min-width: 1680px)

  grid(1600px)

  $font-size-basic = 16px
  $font-size-small = 14px
  $font-size-mid = 18px

  font-sizes($font-size-basic, $font-size-small, $font-size-mid)

  @import 'responsive/monitor'

@media screen and (min-width: 1920px)

  grid(1800px)
